}

\def\noise{
    \begin{tikzpicture}[samples=200, domain=0:360]
        \begin{axis}[
            width=4cm, height=2.5cm,
            axis line style={draw=none}, xtick=\empty, hide y axis
        ]
        \addplot [no markers, smooth] {sin(5*x)+rand*2};
        \end{axis}
        \draw (1.2,0.3) ellipse (1.2cm and 0.9cm);
    \end{tikzpicture}
}


